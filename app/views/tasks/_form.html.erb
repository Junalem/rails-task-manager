<% if @task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
    <p class='text-danger'><%= message %></p>
  <% end %>
<% end %>
<div class='container m-3'>
  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
    <%= f.submit class: 'btn btn-info m-3' %>
  <% end %>
</div>
